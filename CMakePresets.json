{
	"version": 3,
	"cmakeMinimumRequired": {
		"major": 3,
		"minor": 22,
		"patch": 0
	},
	"configurePresets": [
		{
			"name": "cfg-base",
			"binaryDir": "${sourceDir}/build/${presetName}",
			"installDir": "${sourceDir}/install/${presetName}",
			"generator": "Ninja",
			"cacheVariables": {
				"CMAKE_TOOLCHAIN_FILE": "${sourceDir}/submodules/vcpkg/scripts/buildsystems/vcpkg.cmake",
				"TODDS_UNIT_TESTS": "ON",
				"TODDS_WARNINGS_AS_ERRORS": "ON"
			},
			"hidden": true
		},
		{
			"name": "cfg-dbg",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Debug"
			},
			"hidden": true
		},
		{
			"name": "cfg-rel",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Release"
			},
			"hidden": true
		},
		{
			"name": "cfg-win-msvc",
			"inherits": [
				"cfg-base"
			],
			"cacheVariables": {
				"VCPKG_TARGET_TRIPLET": "x64-windows-static"
			},
			"condition": {
				"type": "equals",
				"lhs": "${hostSystemName}",
				"rhs": "Windows"
			},
			"hidden": true
		},
		{
			"name": "cfg-win-dbg-msvc",
			"inherits": [
				"cfg-dbg",
				"cfg-win-msvc"
			],
			"displayName": "Windows MSVC debug configuration",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Debug",
				"CMAKE_MSVC_RUNTIME_LIBRARY": "MultiThreadedDebug"
			}
		},
		{
			"name": "cfg-win-rel-msvc",
			"inherits": [
				"cfg-rel",
				"cfg-win-msvc"
			],
			"displayName": "Windows MSVC release config",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Release",
				"CMAKE_MSVC_RUNTIME_LIBRARY": "MultiThreaded"
			}
		}
	],
	"buildPresets": [
		{
			"name": "win-dbg-msvc",
			"configurePreset": "cfg-win-dbg-msvc",
			"displayName": "Debug",
			"configuration": "Debug"
		},
		{
			"name": "win-rel-msvc",
			"configurePreset": "cfg-win-rel-msvc",
			"displayName": "Release",
			"configuration": "Release"
		}
	]
}